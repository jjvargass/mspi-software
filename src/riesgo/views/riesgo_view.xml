                    help="Filtrar Tipo interno"
                    domain="[('tipo', '=', 'interno')]"
                />
                <filter name="filtro_tipo_externo"
                    string="externo"
                    help="Filtrar Tipo externo"
                    domain="[('tipo', '=', 'externo')]"
                />
                <field name="activo_sistema" />
                <group string="Agrupar por...">
